@model Project_63131631.Areas.Administrator.Models.ProductType_63131631

@{
    ViewBag.Title = "Cập nhật loại";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>Cập nhật loại</h2>

@using (Html.BeginForm("Edit", "ProductType_63131631", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.typeID)
    @if (!string.IsNullOrEmpty(ViewBag.EditTypeError))
    {
        <div class="text-success" style="margin-left: 15px; border: 1px solid black; margin-right: 15px; padding: 20px; background-color: honeydew;">
            @ViewBag.EditTypeError
        </div>
    }

<div class="form-group col-lg-5">
    <label>Tên danh mục</label>
    @Html.DropDownListFor(model => model.cateID, ViewBag.cateListEdit as SelectList, new { @class = "form-control" })
    <label>Tên loại</label>
    @Html.EditorFor(model => model.typeName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên loại..." } })
    <div class="text-danger">@Html.ValidationMessageFor(model => model.typeName)</div>
    <br />
    <button style="color: white; background-color: black; width: 168px;border-radius:35px" type="submit" class="btn btn-info add-new">Cập Nhật</button>
    <a style="color: white; background-color: black; width: 190px; margin-left: 23px; border-radius: 35px " class="btn btn-info add-new" href="@Url.Action("Index")" role="button"><i class=""></i>Quay Lại</a>
</div>
</div>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>