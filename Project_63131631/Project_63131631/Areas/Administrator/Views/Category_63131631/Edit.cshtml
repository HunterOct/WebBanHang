@model Project_63131631.Areas.Administrator.Models.Category_63131631

@{
    ViewBag.Title = "Cập nhật danh mục";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}
<h2>Cập nhật danh mục</h2>

<div>
    <i class="fa fa-undo fa-fw"></i>@Html.ActionLink("Quay lại", "Index", "Category_63131631")
</div>
@using (Html.BeginForm("Edit", "Category_63131631", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.cateID)
    @if (!string.IsNullOrEmpty(ViewBag.EditCategory))
    {
        <div class="text-success" style="margin-left: 15px; border: 1px solid black; margin-right: 15px; padding: 20px; background-color: honeydew;">
            @ViewBag.EditCategory
        </div>
    }
<div class="form-group col-lg-5">
    <label>Tên danh mục</label>
    @Html.EditorFor(model => model.cateName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên danh mục..." } })
    <div class="text-danger">@Html.ValidationMessageFor(model => model.cateName)</div>
    <label>Hình ảnh</label>
    <input type="file" id="file" name="file" />
    @Html.HiddenFor(model => model.catePhoto)
    <br />
    <button style="color: white; background-color: black; width: 168px;border-radius:35px" type="submit" class="btn btn-info add-new">Cập Nhật</button>
    <a style="color: white; background-color: black; width: 190px; margin-left: 23px; border-radius: 35px " class="btn btn-info add-new" href="@Url.Action("Index")" role="button"><i class=""></i>Quay Lại</a>
</div>
</div>
}



<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
