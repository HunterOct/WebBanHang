@model Project_63131631.Areas.Administrator.Models.Category_63131631
@{
    ViewBag.Title = "Tạo danh mục mới";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>Tạo danh mục mới</h2>
<div>
    <i class="fa fa-undo fa-fw"></i>@Html.ActionLink("Quay lại", "Index", "Category_63131631")
</div>
@using (Html.BeginForm("Create", "Category_63131631", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        <div class="text-success">
            @ViewBag.CreateCategory
        </div>
        <div class="form-group col-lg-5">
            <label>Tên danh mục</label>
            @Html.EditorFor(model => model.cateName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên danh mục..." } })
            <div class="text-danger">@Html.ValidationMessageFor(model => model.cateName)</div>
            <label>Hình ảnh</label>
            <input type="file" id="file" name="file" />
            <div class="text-danger">@ViewBag.HinhAnh</div>
            <br />
            <button style="color: white; background-color: black; width: 168px;border-radius:35px" type="submit" class="btn btn-info add-new"><i class="fa fa-plus"></i> Tạo mới</button>
            <a style="color: white; background-color: black; width: 190px; margin-left: 23px; border-radius: 35px " class="btn btn-info add-new" href="@Url.Action("Index")" role="button"><i class=""></i>Quay Lại</a>
        </div>
    </div>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>