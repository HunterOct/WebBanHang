@model Project_63131631.Areas.Administrator.Models.Product_63131631

@{
    ViewBag.Title = "Tạo sản phẩm";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Create", "Product_63131631", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary(true)

    <div class="page-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-8" style="margin:0 auto">
                    <div class="card">
                        <div class="card-body">
                            <form>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label for="productname">Mã Sản Phẩm</label>
                                            @Html.EditorFor(model => model.proID, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập mã sản phẩm..." } })
                                        </div>
                                        <div class="form-group">
                                            <label for="manufacturername">Tên Sản Phẩm</label>
                                            @Html.EditorFor(model => model.proName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên sản phẩm..." } })
                                        </div>
                                        <div class="form-group">
                                            <label for="productdesc">Bảo Hành Sản Phẩm</label>
                                            @Html.EditorFor(model => model.proGuarantee, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập Bảo Hành sản phẩm..." } })
                                        </div>
                                        <div class="form-group">
                                            <label for="productdesc">Đơn Giá</label>
                                            @Html.EditorFor(model => model.proPrice, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập đơn giá sản phẩm..." } })
                                        </div>
                                        <div class="form-group">
                                            <label for="productdesc">Chiết Khấu</label>
                                            @Html.EditorFor(model => model.proDiscount, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập chiết khấu (%)..." } })
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label class="control-label">Loại Sản Phẩm</label>
                                            @Html.DropDownListFor(model => model.typeID, ViewBag.typeListCreate as SelectList, new { @class = "form-control" })

                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">Hãng Sản Xuất</label>
                                            @Html.DropDownListFor(model => model.pdcID, ViewBag.pdcListCreate as SelectList, new { @class = "form-control" })
                                        </div>

                                        <div class="form-group">
                                            <label for="productdesc">Mô Tả Sản Phẩm</label>
                                            @Html.TextAreaFor(model => model.proDescription, new { @class = "form-control", @placeholder = "Nhập mô tả sản phẩm..." })
                                        </div>

                                        <div class="card">
                                            <div class="card-body">
                                                <h4 class="card-title mb-3">Hình Ảnh Sản Phẩm</h4>
                                                <form action="" method="post" class="dropzone">
                                                    <div class="fallback">
                                                        <input name="file" type="file" multiple />
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="nut" style="margin-top: 30px; text-align: center;">
                                    <button style="color: white; background-color: black; width: 168px;border-radius:35px" type="submit" class="btn btn-info add-new">Lưu Lại</button>
                                    <a style="color: white; background-color: black; width: 190px; margin-left: 23px; border-radius: 35px " class="btn btn-info add-new" href="@Url.Action("Index")" role="button"><i class=""></i>Quay Lại</a>
                                </div>
                            </form>

                        </div>
                    </div>

                </div>
            </div>
            <!-- end row -->

        </div> <!-- container-fluid -->
    </div>
}


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>