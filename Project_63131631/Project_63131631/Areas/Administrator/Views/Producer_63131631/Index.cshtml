@model PagedList.IPagedList<Project_63131631.Areas.Administrator.Models.Producer_63131631>

@{
    ViewBag.Title = "Hãng sản xuất";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>Hãng sản xuất</h2>
<hr />
<div>
    <div class="panel panel-default">
        @Html.ValidationSummary(true)
        @if (!string.IsNullOrEmpty(ViewBag.CreatePdcError))
        {
            <div class="text-success" style="margin-left: 15px; border: 1px solid black; margin-right: 15px; padding: 20px; background-color: honeydew;">
                @ViewBag.CreatePdcError
            </div>
        }
        <div class="panel-heading" style="margin-top:100px">
            <div class="table-title">
                <div class="row" style="margin-top: 100px">
                    @*<a class="btn btn-primary btn-default" href="@Url.Action("Index", "Customer")" role="button">Làm mới</a>*@
                    <div class="col-sm-8" style="max-width:15%;">
                        <a style="color: white; background-color: black; width: 190px; margin-left: 23px; border-radius: 35px " class="btn btn-info add-new" href="@Url.Action("Create", "Producer_63131631")" role="button"><i class="fa fa-plus"></i>Tạo hãng sản xuất mới</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-centered table-nowrap table-hover">
                                <thead class="thead-light">
                                    <tr>
                                        <th scope="col">ID</th>
                                        <th scope="col">Tên hãng</th>
                                        <th scope="col">SĐT</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Bảo Hành</th>
                                        <th scope="col">Địa chỉ</th>
                                        <th scope="col">Mô tả</th>
                                        <th scope="col">Hình ảnh</th>
                                        <th scope="col">Chức Năng</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="text-body font-weight-bold">@Html.DisplayFor(modelItem => item.pdcID)</td>
                                            <td>@Html.DisplayFor(modelItem => item.pdcName)</td>
                                            <td>@Html.DisplayFor(modelItem => item.pdcPhone)</td>
                                            <td>@Html.DisplayFor(modelItem => item.pdcEmail)</td>
                                            <td>@Html.DisplayFor(modelItem => item.pdcAddress)</td>
                                            <td style=" text-align: center; word-wrap: break-word; max-width: 409px; ">@Html.DisplayFor(modelItem => item.pdcAddress)</td>
                                            <td>@Html.DisplayFor(modelItem => item.pdcInfo)</td>
                                            <td><img src="@item.pdcPhoto" width="50" height="50" /></td>
                                            <td>
                                                <a href="@Url.Action("Edit", "Producer_63131631", new { id = item.pdcID })"><i class="bx bx-edit-alt"></i></a>|
                                                <a onclick="return confirm('Bạn có chắc chắn muốn xoá hãng này?')" href="@Url.Action("Delete", "Producer_63131631", new { id = item.pdcID })"><i class="fa fa-times fa-fw"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <ul class="pagination pagination-rounded justify-content-center mt-4">
                                    @if (Model.HasPreviousPage)
                                    {
                                        <li class="page-item">
                                            <a href="@Url.Action("Index", new { page = Model.PageNumber - 1 })" class="page-link"><i class="mdi mdi-chevron-left"></i></a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="page-item disabled">
                                            <span class="page-link"><i class="mdi mdi-chevron-left"></i></span>
                                        </li>
                                    }

                                    @for (int i = 1; i <= Model.PageCount; i++)
                                    {
                                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                            <a href="@Url.Action("Index", new { page = i })" class="page-link">@i</a>
                                        </li>
                                    }

                                    @if (Model.HasNextPage)
                                    {
                                        <li class="page-item">
                                            <a href="@Url.Action("Index", new { page = Model.PageNumber + 1 })" class="page-link"><i class="mdi mdi-chevron-right"></i></a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="page-item disabled">
                                            <span class="page-link"><i class="mdi mdi-chevron-right"></i></span>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
    <!-- /.panel -->
</div>