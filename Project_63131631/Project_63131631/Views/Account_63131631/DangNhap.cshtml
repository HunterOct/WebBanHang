@model Project_63131631.Models.Customer_63131631
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutShop.cshtml";
}

@using (Html.BeginForm())
{
    <div style="padding: 58px;">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <head>
            <meta charset="UTF-8">
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <title>Trang Đăng Nhập</title>
            <link href="~/Content/css/login.css" rel="stylesheet" />
            <link rel="stylesheet" href="style.css">
        </head>
        <body>
            <div class="login-box">
                <h2>Đăng Nhập</h2>
                <form>
                    @if (!string.IsNullOrEmpty(ViewBag.Fail))
                    {
                        <div class="alert alert-danger">
                            @ViewBag.Fail
                        </div>
                    }
                    <div class="user-box">
                        <input type="text" name="cusEmail" required="">
                        <label>Email</label>
                    </div>
                    <div class="user-box">
                        <input type="password" name="CusPass" required="">
                        <label>Mật Khẩu</label>
                    </div>
                    <button class="button" type="submit" value="Đăng Nhập">
                        <p class="text">Đăng Nhập</p>
                    </button>
                    <p style="text-align: center; margin-top: 20px;">Chưa có tài khoản? <a href="~/Account_63131631/dangky" style=" text-decoration: none">Đăng Ký ngay!</a></p>
                </form>
            </div>
        </body>
    </div>
}
