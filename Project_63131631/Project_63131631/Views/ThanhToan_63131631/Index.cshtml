@model List<Project_63131631.Models.CartItem_63131631>

@{
    ViewBag.Title = "Thanh toán đơn hàng";
    Layout = "~/Views/Shared/_LayoutShop.cshtml";
}
<div class="container">
    @if (Model == null || Model.Count == 0)
    {
        <div class="spec ">
            <h3>Thanh toán</h3>
            <div class="ser-t">
                <b></b>
                <span><i></i></span>
                <b class="line"></b>
            </div>
        </div>
        <p class="text-info text-center" style="font-size:25px;">
            Giỏ hàng của bạn trống!
        </p>
    }
    else
    {
        <div class="spec ">
            <h3>Thanh toán</h3>
            <div class="ser-t">
                <b></b>
                <span><i></i></span>
                <b class="line"></b>
            </div>
        </div>
        <div class="row">
            <div id="center_column" class="center_column">
                <div class="row">
                    <div id="left_column" class="column col-sm-12 col-md-12">
                        <form class="form-horizontal" action="/ThanhToan_63131631/StepEnd" method="post">
                            <div class="col-sm-6 col-md-6">
                                <div class="detail_ct">
                                    <legend>Thông tin liên hệ</legend>

                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">Họ và tên :</label>
                                        <div class="col-lg-8" name="fullname">
                                            @ViewBag.FullName
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">Số Điện Thoại:</label>
                                        <div class="col-lg-8" name="phone">
                                            @ViewBag.Phone
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">Email :</label>
                                        <div class="col-lg-8" name="email">
                                            @ViewBag.Email
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">Địa Chỉ :</label>
                                        <div class="col-lg-8" name="address">
                                            @ViewBag.Address
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">Ghi chú</label>
                                        <div class="col-lg-8">
                                            <textarea class="form-control input-sm field" placeholder="Vui lòng viết ghi chú vào ô này..." name="note" rows="5" style="height:50px;"></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">Hình thức thanh toán:</label>
                                        <div class="col-lg-8">
                                            <select name="ttoan" class="form-control">
                                                <option value="COD">COD</option>
                                                <option value="VNPay">VNPay</option>
                                                <!-- Thêm các hình thức thanh toán khác nếu cần -->
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div> <div class="col-sm-6 col-md-6">
                                <div class="detail_ct" style="height:auto; min-height:inherit;">
                                    <legend>Giỏ hàng của bạn</legend>
                                    <table class="table" style="background:#FFF; font-size:18px;">
                                        <thead>
                                            <tr>
                                                <th>Hình</th>
                                                <th>Sản phẩm</th>
                                                <th>SL</th>
                                                <th>Đơn giá</th>
                                                <th>Thành tiền</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{int total = 0;}
                                            @foreach (var item in Model)
                                            {
                                                <tr style="border-top:1px solid #999;">
                                                    <td>
                                                        <img src="@item.Hinh" width="48">
                                                    </td>
                                                    <td>
                                                        <strong>
                                                            @item.TenSanPham
                                                        </strong>
                                                    </td>
                                                    <td>@item.SoLuong</td>
                                                    <td>@Int32.Parse(item.DonGia).ToString("#,##0") VNĐ</td>
                                                    <td>@item.ThanhTien.ToString("#,##0") VNĐ</td>
                                                </tr>
                                                total += item.ThanhTien;
                                            }
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td colspan="6">
                                                    <a class="btn btn-default hidden-xs" style="float:right;" href="@Url.Action("Index", "GioHang_63131631")">Quay về</a>
                                                    <div class="clr"></div>
                                                </td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                    <fieldset>
                                        <legend>Tổng</legend>
                                        <table class="table" style="background:#FFF; font-size:20px;">
                                            <tbody>
                                                <tr>
                                                    <td align="right">Tổng tiền:</td>
                                                    <td style="color:red;" align="right">@total.ToString("#,##0") VNĐ</td>
                                                </tr>
                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <td colspan="2">
                                                        <input type="submit" style="width:100%;" name="submit_step1_right" class="btn btn-primary" value="Đặt Hàng">
                                                    </td>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </fieldset>
                                </div>
                            </div> <div class="clr"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>